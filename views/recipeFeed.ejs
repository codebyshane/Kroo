<%- include('partials/header') -%>
  <div class="mt-5">
    <h2>Add a Recipe</h2>
    <form action="/recipe/createRecipe" enctype="multipart/form-data" method="POST">
      <div class="mb-3">
          <label for="title" class="form-label">Dish Name</label>
          <input type="text" class="form-control" id="title" name="title">
      </div>
      <div class="mb-3">
        <label for="caption" class="form-label">Description</label>
        <textarea class="form-control" id="caption" name="caption"></textarea>
      </div>
      <div class="mb-3">
        <label for="imgUpload" class="form-label">Image</label>
        <input type="file" class="form-control" id="imageUpload" name="file">
      </div>
      <div class="mb-3">
        <label for="ingredientName" class="form-label">Ingredient Name</label>
        <input type="text" class="form-control" id="ingredientName" name="ingredientName"></textarea>
      </div>
      <div class="mb-3">
        <label for="ingredientAmount" class="form-label">Ingredient Amount</label>
        <input type="number" class="form-control" id="ingredientAmount" name="ingredientAmount"></input>
      </div>
      <div class="mb-3">
        <label for="ingredientUnit" class="form-label">Ingredient Unit</label>
        <select class="form-control" id="ingredientUnit" name="ingredientUnit">
          <option>TEAspoon(s)</option>
          <option>TABLEspoon(s)</option>
          <option>cup(s)</option>
          <option>lb(s)</option>
          <option>oz</option>
          <option>fl oz</option>
          <option>mL</option>
          <option>gram(s)</option>
          <option>stick(s)</option>
          <option>gallon(s)</option>
          <option>box(es)</option>
          <option>bag(s)</option>
          <option>pouch(es)</option>
          <option>packet(s)</option>
          <option>sleeve(s)</option>
          <option>bunch(es)</option>
          <option>slice(s)</option>
          <option>tube(s)</option>
          <option>bottle(s)</option>
          <option>cap(s)</option>
          <option>pinch(es)</option>
          <option>dash(es)</option>
          <option>splash(es)</option>
        </select>
      </div>
      <form>
        <p>
            <label>Item:</label> <input type="text">
            <label>Link:</label> <input type="text">
            <label>Comments:</label> <input type="text">
            <span class="remove">Remove</span>
        </p>
        <p>
            <span class="add">Add item</span>
        </p>
    </form>
      
      <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
    </form>
  </div>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<recipes.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a class= "card-anchor" href="/recipe/<%= recipes[i]._id%>">
              <div class="card" style="width: 18rem;">
                <img class="img-fluid card-img-top" src="<%= recipes[i].image%>">
                <div class="card-body">
                  <h5 class="card-title"><%= recipes[i].title%></h5>
                  <p class="card-text"><%= recipes[i].caption%></p>
                </div>
              </div>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>   
<%- include('partials/footer') -%>